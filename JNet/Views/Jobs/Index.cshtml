@model IEnumerable<JNet.Models.Job>

<h2>Jobs</h2>

<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
        <th scope="col">Company</th>
        <th scope="col">Location</th>
    </tr>
    </thead>
    <tbody>

    @{
        int row = 1;
        foreach (var j in @Model)
        {
            <tr>
                <th scope="row">@row</th>
                <td>@j.Title</td>
                <td>@j.Company.Name</td>
                <td>@j.Company.Location.City, @j.Company.Location.State</td>
            </tr>
            row++;
        }
    
    }

    </tbody>
</table> 